{
  "name": "dapp-card-store-contract",
  "version": "0.1.0",
  "private": true,
  "description": "Contract for the Agoric Dapp",
  "scripts": {
    "build": "exit 0",
    "test": "ava --verbose",
    "lint": "eslint '**/*.{js,jsx}'",
    "lint-fix": "eslint --fix '**/*.{js,jsx}'",
    "lint-check": "eslint '**/*.{js,jsx}'",
    "lint-fix-jessie": "eslint -c '.eslintrc-jessie.js' --fix '**/*.{js,jsx}'",
    "lint-check-jessie": "eslint -c '.eslintrc-jessie.js' '**/*.{js,jsx}'"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-jessie": "^0.0.6",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^2.1.2",
    "ava": "^3.13.0"
  },
  "dependencies": {
    "@agoric/assert": "*",
    "@agoric/babel-parser": "^7.6.4",
    "@agoric/ertp": "*",
    "@agoric/eventual-send": "*",
    "@agoric/install-ses": "*",
    "@agoric/notifier": "*",
    "@agoric/store": "*",
    "@agoric/zoe": "*",
    "esm": "^3.2.5"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "esm"
    ],
    "timeout": "10m"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric"
  },
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric/issues"
  },
  "homepage": "https://github.com/Agoric/agoric#readme",
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es6": true
    },
    "rules": {
      "implicit-arrow-linebreak": "off",
      "function-paren-newline": "off",
      "arrow-parens": "off",
      "strict": "off",
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "no-return-assign": "off",
      "no-param-reassign": "off",
      "no-restricted-syntax": [
        "off",
        "ForOfStatement"
      ],
      "no-unused-expressions": "off",
      "no-loop-func": "off",
      "no-inner-declarations": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": "off"
    },
    "globals": {
      "harden": "readonly"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintIgnore": [
    "dappConstants.js"
  ]
}
